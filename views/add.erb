<!DOCTYPE html>

    <form style="text-align:right" action="/spaces" method="get">
      <input type="submit" value="Return to spaces">
    </form>

    <h2 style="text-align:center;"> List a Space </h2>
    <form action="/spaces/new" method="POST">
      <div>
        <label for="space_name"> Name <input type="text" name="space_name"></label>
      </div>

      <div>
        <label for="price_per_night">
          Price per night (Â£)
          <input type="number" min ="0" name="price_per_night">
        </label>
      </div>
      <div>
        <label for="property_description">
          Description<br>
          <textarea rows="8" cols="100" name="property_description"></textarea>
        </label>
      </div>

      <div style="text-align:center">
        <input type="submit" value="List my space">
      </div>

      <div class="input-group input-daterange" id ="sandbox-container" data-provide="datepicker">
        <input type="text" class="input-sm form-control" name="start" />
        <span class="input-group-addon">to</span>
        <input type="text" class="input-sm form-control" name="end" />
      </div>

    </form>

    <script>
      $(document).ready(function() {
        $('#sandbox-container').datepicker({
          format: "dd/mm/yyyy",
          timepicker: true,
          maxViewMode: 2,
          clearBtn: true,
          multidate: false,
          todayHighlight: true,
          toggleActive: false
        });
});
</script>

